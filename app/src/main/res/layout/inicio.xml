<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margen">

    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/usuario"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/etClave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUsuario"
        android:layout_marginTop="@dimen/margen"
        android:hint="@string/clave"
        android:inputType="textPassword"
        android:singleLine="true"/>

    <Button
        android:id="@+id/bIngresa"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/alto_boton"
        android:layout_below="@id/etClave"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margen"
        android:background="@color/lverde400"
        android:textColor="@color/blanco"
        android:text="@string/ingresa"
        />

    <ImageView
        android:id="@+id/ivDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bIngresa"
        android:layout_centerHorizontal="true"
        android:src="@drawable/doctor" />

</RelativeLayout>
